<Window
    x:Class="DenSorteBog.KreditorSkylderListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="KreditorSkylderListView"
    Width="943.667"
    Height="770.333"
    DataContext="{Binding Source={StaticResource Locator}, Path=KreditorSkylderListViewModel}"
    mc:Ignorable="d">
    <Grid
        Width="280"
        Height="145"
        Margin="324,578,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top">
        <TextBox
            Width="192"
            Height="22"
            Margin="86,30,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding Path=Model.funcMoneyValue}"
            TextWrapping="Wrap" />
        <RadioButton
            Margin="86,76,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="RadioButton" />
        <RadioButton
            Margin="193,76,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="RadioButton" />
        <TextBox
            Width="192"
            Height="22"
            Margin="86,3,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding Path=Model.funcPersonName}"
            TextWrapping="Wrap" />
        <Label
            Width="58"
            Margin="0,3,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Navn" />
        <Label
            Width="58"
            Margin="0,29,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Penge" />
        <Button
            Width="88"
            Height="39"
            Margin="190,102,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Button" />
        <Button
            Width="88"
            Height="39"
            Margin="0,102,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="TestFuncButton">
           <!-- Add reference to Microsoft.Expression.Interactions.dll, System.Windows.Interactivity.dll -->
            <!-- Use mvvmxmlns snippet to add i and ei namespace prefixes -->
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                    <ei:CallMethodAction 
                TargetObject="{Binding}"
                MethodName="funcTestSortBog"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Button>
        <Grid
            Width="919"
            Height="565"
            Margin="-318,-567,-321,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <DataGrid
                Width="440"
                Height="505"
                Margin="10,50,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" 
                ItemsSource="{Binding Path=TestSortBog, Mode=TwoWay}"
                SelectedItem="{Binding Path=SelectedPerson, Mode=TwoWay}"/>
            <DataGrid
                Grid.Column="1"
                Width="439"
                Height="505"
                Margin="10,50,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" />
            <Label
                Width="66"
                Height="31"
                Margin="196,14,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Label" />
            <Label
                Grid.Column="1"
                Width="66"
                Height="31"
                Margin="195,14,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Label" />
        </Grid>
    </Grid>
</Window>
